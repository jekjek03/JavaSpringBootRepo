	//http://api.openweathermap.org/data/2.5/weather?q=London,uk&appid=c406495527522c36fcf6236cd5a757f8
	
	
/** OPTION #1: Return a JSON format of Weather Data; NOTE: URL is hard-coded
	 * @return WeatherForecast
	 */
	public WeatherForecast getWeatherForecast() {
		RestTemplate restTemplate = new RestTemplate();
		HttpHeaders  httpHeaders = new HttpHeaders();
		httpHeaders.setAccept(Arrays.asList(MediaType.APPLICATION_JSON));
		HttpEntity<WeatherForecast> entity = new HttpEntity<WeatherForecast>(httpHeaders);
		return restTemplate.exchange(WEATHER_URL, HttpMethod.GET, entity, WeatherForecast.class).getBody();
	}